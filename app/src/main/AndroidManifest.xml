<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ketaylik">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ketaylik"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.a.HomeActivity"
            android:label="@string/title_activity_home"></activity>
        <activity android:name=".Activity.a.ServicesActivity"
            android:theme="@style/Theme.KetaylikNoActionBar"/>
        <activity
            android:name=".Activity.a.ConfirmActivity"
            android:theme="@style/Theme.KetaylikNoActionBar" />
        <activity
            android:name=".Activity.a.LoginActivity"
            android:theme="@style/Theme.KetaylikNoActionBar" />
        <activity android:name=".Activity.a.SplashActivity"
            android:theme="@style/Theme.KetaylikNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>